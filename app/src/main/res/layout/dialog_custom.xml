<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="254dp"
    android:layout_height="463dp">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_dialog_play_detail_coupon_background"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:src="@android:color/holo_blue_bright" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_dialog_play_detail_coupon_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginTop="24dp"
                    android:text="Madang spicy fragrant and crispy spicy"
                    android:textColor="@android:color/black"
                    android:textSize="19sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_dialog_play_detail_coupon_price"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="18dp"
                    android:gravity="right"
                    android:text="230Â¥"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textSize="18sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="23dp"
                    android:layout_marginTop="13dp" />

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v4.widget.NestedScrollView>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_dialog_play_detail_coupon_buy"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:background="@android:color/holo_red_light"
            android:text="BUY"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </android.support.v7.widget.LinearLayoutCompat>


</android.support.v7.widget.CardView>