<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhoushicheng.myapplication.AutoPhotoLayoutSample.AutoPhotoLayoutSampleActivity">


    <com.example.zhoushicheng.myapplication.AutoPhotoLayoutSample.AutoPhotoLayout
        android:id="@+id/apl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon_size="10dp"
        app:item_margin="3"
        app:line_count="4"
        app:max_count="9" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/apl_content"
        android:text="HERE" />

</RelativeLayout>
